@model List<CategoryGetModel>
@{
    Layout ="_AdminLayout";
}
<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Kategoriler</h5>
                        <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Id</th>
                                        <th>Kategori Adı</th>
                                        <th>Url</th>
                                        <th>Ürün Sayısı</th>
                                        <th>Aktif</th>
                                        <th style="width: 200px;"></th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                        <tr>
                                            <td>@c.Id</td>
                                            <td>@c.CategoryName</td>
                                            <td>@c.Url</td>
                                            <td>
                                                @c.ProductCount
                                            </td>
                                            <td class="text-center">

                                            @if (c.IsActive == true)
                                            {
                                            <i class="fa-solid fa-circle-check text-success" style="transform: scale(1.25);"></i>
                                            } else{
                                            <i class="fa-solid fa-circle-xmark text-danger" style="transform: scale(1.25);"></i>
                                            }

                                        </td>
                                            <td class="text-center">
                                                <a asp-controller="Category" asp-action="Edit" asp-route-id=@c.Id class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                                <a asp-controller="Product" asp-route-category=@c.Id class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-right-long"></i>
                                                </a>
                                                
                                                <a href="javascript:void(0);" class="btn btn-danger btn-sm"
                   onclick="openDeleteModal(@c.Id, '@c.CategoryName')">
                    <i class="fa-solid fa-trash"></i>
                </a>

                <form id="delete-form-@c.Id" method="post" asp-controller="Category" asp-action="DeleteConfirm" style="display:none;">
                    <input type="hidden" name="Id" value="@c.Id" />
                </form>
                                            </td>
                                            
                                             

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="deleteForm" method="post" asp-controller="Category" asp-action="DeleteConfirm">
        <div class="modal-header">
          <h5 class="modal-title">Silme Onayı</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
        </div>
        <div class="modal-body">
          <p id="deleteMessage"></p>
          <input type="hidden" name="Id" id="deleteId" />
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Sil</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        </div>
      </form>
    </div>
  </div>
</div>