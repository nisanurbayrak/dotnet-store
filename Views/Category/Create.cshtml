@model CategoryCreateModel
@{
    Layout ="_AdminLayout";
}
  <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Kategori Ekle</h5>
                        <a href="kategori.html" class="btn btn-sm btn-primary  d-flex ms-auto align-items-center">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form method="post" asp-controller="Category" asp-action="Create">
                            <div class="row mb-3">
                                <label asp-for="CategoryName" name="CategoryName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="CategoryName" class="form-control">
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 align-items-center">
                                <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6 d-flex align-items-center">
                                    <input type="checkbox" class="form-check-input" data-bootstrap-switch asp-for="IsActive" id="IsActive" />
                                </div>

                                <div class="col-sm-4 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary w-75">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      @section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
