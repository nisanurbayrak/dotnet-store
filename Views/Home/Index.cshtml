@model List<Product>
@{
    var categories = (List<Category>)ViewBag.Categories;
    var sliders = (List<dotnet_store.Models.Slider>)ViewBag.Sliders;
}

@{
    ViewData["Title"] = "Home Page";
}
<a class="btn btn-primary" asp-action="Deneme" asp-controller="Home">Test</a>
    <section class="mt-3">
        <div class="container">
            <div class="card">
                <div class="row p-1 p-lg-2 gx-2">
                    <div class="col-lg-3 d-none d-lg-block">
                    @await Html.PartialAsync("Partials/Site/_Menu", categories)
                        
                    </div>
                    <div class="col-lg-9">
                        @await Component.InvokeAsync("Slider")
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-3">
        <div class="container">
            <h3 class="h4 mb-1 mb-lg-3">Son Eklenenler</h3>

            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
                @foreach (var item in Model)
                {
                    <div class="col-3">
                        @await Html.PartialAsync("Partials/Site/_ProductCard", item)
                    </div>
                }
            </div>
        </div>
    </section>