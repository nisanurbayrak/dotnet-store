@model List<Product>

<section class="mt-3">
    <div class="container">
        <h3 class="h4 mb-1 mb-lg-3">Ürün Listesi</h3>

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-danger">Ürün bulunamadı.</div>
        }

        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
            @foreach (var product in Model)
            {
                <div class="col">
                    @await Html.PartialAsync("Partials/Site/_ProductCard", product)
                </div>
            }

        </div>
    </div>
</section>