@model (List<ProductGetModel> Active, List<ProductGetModel> Passive)
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Ürünler</h5>
                <div class="d-flex gap-2">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-plus"></i>
                    </a>
                    <a asp-controller="Product" asp-action="List" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-list"></i> Product List
                    </a>
                </div>
            </div>

            <div class="card-body">
                <form method="get">
                    <div class="input-group mb-2">
                        <select name="category" class="form-select" asp-items="ViewBag.Categories">
                            <option value="" selected>Tüm Kategoriler</option>
                        </select>
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fa-solid fa-filter"></i>
                    </div>
                </form>
@if (Model.Active.Count == 0 && Model.Passive.Count == 0){
                    <div class="alert alert-warning text-center">
                        <strong>Ürün Bulunamadı!</strong>
                    </div>
                } else
{
    <div class="table-responsive">
<table class="table table-bordered table-hover table-striped mb-4">
    <thead class="table-secondary">
        <tr>
            <td colspan="9"><h5>Aktif Ürünler</h5></td>
        </tr>
        <tr>
            <th style="width: 20px">Id</th>
            <th style="width: 80px">Resim</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Aktif</th>
            <th>Anasayfa</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th style="width:fit-content"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Active)
        {
            <tr>
                <td>@p.Id</td>
                <td><img src="img/@p.Image" class="img-fluid" alt="" /></td>
                <td>@p.ProductName</td>
                <td>@p.Price ₺</td>
                <td>
                    <i class="fa-solid @(p.IsActive ? "fa-circle-check text-success" : "fa-circle-xmark text-danger")"></i>
