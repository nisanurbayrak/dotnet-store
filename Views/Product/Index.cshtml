  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item @(ViewBag.ActivePageIndex > 1 ? "" : "disabled")">
        <a class="page-link" href="@Url.Action("Index", new { category = ViewBag.SelectedCategory, activePageNumber = ViewBag.ActivePageIndex - 1, passivePageNumber = ViewBag.PassivePageIndex })" tabindex="-1" aria-disabled="@(ViewBag.ActivePageIndex <= 1)">
          &laquo; Önceki
        </a>
      </li>

      @for (int i = 1; i <= ViewBag.ActiveTotalPages; i++)
      {
        <li class="page-item @(i == ViewBag.ActivePageIndex ? "active" : "")" aria-current="@(i == ViewBag.ActivePageIndex ? "page" : null)">
          <a class="page-link" href="@Url.Action("Index", new { activePageNumber = i, passivePageNumber = ViewBag.PassivePageIndex, category = ViewBag.SelectedCategory })">@i</a>
        </li>
      }

      <li class="page-item @(ViewBag.ActivePageIndex < ViewBag.ActiveTotalPages ? "" : "disabled")">
        <a class="page-link" href="@Url.Action("Index", new { category = ViewBag.SelectedCategory, activePageNumber = ViewBag.ActivePageIndex + 1, passivePageNumber = ViewBag.PassivePageIndex })" aria-disabled="@(ViewBag.ActivePageIndex >= ViewBag.ActiveTotalPages)">
          Sonraki &raquo;
        </a>
      </li>
    </ul>
  </nav>
</div>



