    <!-- Custom Scripts -->
   <script>
        // CKEditor init
    ClassicEditor
    .create(document.querySelector('#editor'))
    .catch(error => {
        console.error(error);
    });

    // Image preview (iki farklı fonksiyonun birleşimi)
    function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function () {
        const output = document.getElementById('imagePreview');
        output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
    }

    function previewImg(event) {
    const input = event.target;

    if (input.files && input.files[0]) {
        const file = input.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
        const preview = document.getElementById('imagePreview');
        preview.src = e.target.result;
        };

        reader.readAsDataURL(file);
        }
    }

    // Delete Modal açma fonksiyonu
    function openDeleteModal(id, name) {
    document.getElementById('deleteId').value = id;
    document.getElementById('deleteMessage').textContent = `"${name}" kategorisini silmek üzeresiniz. Bu işlem geri alınamaz.`;

    var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
    }

    // Sayfa hazır olduğunda DataTable init
    $(document).ready(function () {
    $('#myTable').DataTable();

    // switch
    $("input[data-bootstrap-switch]").each(function () {
        $(this).bootstrapSwitch('state', $(this).prop('checked'));
    });

    $("input[data-bootstrap-switch]").bootstrapSwitch();
    });
    
   </script>


    @RenderSection("Scripts", required: false)
</body>
</html>